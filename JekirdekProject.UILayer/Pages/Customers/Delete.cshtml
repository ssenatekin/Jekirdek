@page "/Delete/{id}"
@model JekirdekProject.UILayer.Pages.Customers.DeleteModel

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete the customer?</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.FirstName @Model.Customer.LastName</dd>
    </dl>
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Page("/Customers/Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>