@page
@model JekirdekProject.UILayer.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form method="post">
    <div class="form-group">
        <label for="username">Kullanıcı Adı</label>
        <input type="text" id="username" asp-for="Input.Username" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="password">Şifre</label>
        <input type="password" id="password" asp-for="Input.Password" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Giriş Yap</button>

    <span asp-validation-for="Input.Username" class="text-danger"></span>
    <span asp-validation-for="Input.Password" class="text-danger"></span>
</form>